@tailwind base;
@tailwind components;
@tailwind utilities;

body {
	/*
	 * At the small breakpoint, add more horizontal padding and switch to different navbar.
	 * At the large breakpoint, cut off the width of the page.
	 */
	@apply mx-auto max-w-screen-lg bg-green-200 px-4 sm:px-6 sm:py-4;
}
